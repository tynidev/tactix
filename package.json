{
  "name": "tactix",
  "version": "1.0.0",
  "description": "Interactive YouTube video coaching platform for youth sports teams",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "frontend:lan": "npm run -w frontend dev:lan",
    "dev:frontend": "npm run -w frontend dev",
    "dev:backend": "npm run -w backend dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run -w frontend build",
    "build:backend": "npm run -w backend build",
    "setup": "npm install --workspaces",
    "install:all": "npm install --workspaces",
    "fmt": "dprint fmt",
    "fmt:check": "dprint check",
    "fmt:diff": "dprint check --diff"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dprint": "^0.45.0",
    "supabase": "^2.40.7"
  },
  "keywords": [
    "sports",
    "analysis",
    "video",
    "drawing",
    "annotation",
    "coaching",
    "youth-sports"
  ],
  "author": "Tyler",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
