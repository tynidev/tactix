{
  "name": "tactix-backend",
  "version": "1.0.0",
  "description": "TACTIX Backend - Express API server with Supabase integration",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm install --include=dev && tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "postinstall": "npx playwright install chromium || npx playwright install --with-deps chromium"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "playwright": "^1.47.0",
    "tactix-backend": "file:"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.0",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20"
  }
}
